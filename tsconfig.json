{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node", // Important pour Jest et la résolution des modules
    "types": ["jest", "node"] // Assure que Jest et Node types sont inclus
  },
  "include": ["features/**/*.ts", "tests/**/*.ts", "models/UserModel.ts"], // Inclut les fichiers de test et les fonctionnalités
  "exclude": ["node_modules"] // Exclut node_modules pour éviter la transpilation inutile
}
